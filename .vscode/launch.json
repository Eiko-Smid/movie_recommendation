{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Python in Docker (debugpy)",
      "type": "python",
      "request": "attach",
      "connect": { "host": "localhost", "port": 5678 },
      "justMyCode": true,
      "pathMappings": [
        { "localRoot": "${workspaceFolder}", "remoteRoot": "/app" }
      ]
    }
  ]
}

